sudo tar -C /usr/local -xzf go1.11.4.linux-amd64.tar.gz

~/.profile
export PATH=$PATH:/usr/local/go/bin
source ~/.profile

~/.home
cd ~
mkdir go

~/.bashrc
export GOPATH=$HOME/go
source .bashrc

~/go
cd ~/go
mkdir -p src/hello

~/go/src/hello/
touch hello.go

~/go/src/hello/
go install

~/go/bin
./hello

